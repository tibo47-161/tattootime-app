# Produktions-Umgebungsvariablen für TattooTime Backend
# Diese Datei dient als Vorlage - echte Werte werden in Railway gesetzt

# Server-Konfiguration
PORT=5000
NODE_ENV=production

# MongoDB Atlas Verbindung (wird in Railway gesetzt)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tattootime?retryWrites=true&w=majority

# JWT Sicherheit (wird in Railway generiert)
JWT_SECRET=super-sicherer-jwt-schluessel-mindestens-32-zeichen-lang
JWT_EXPIRES_IN=7d

# E-Mail Konfiguration (optional - für Terminbestätigungen)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=ihr-email@gmail.com
EMAIL_PASS=ihr-app-passwort

# CORS Konfiguration
FRONTEND_URL=https://tattootime.vercel.app

# Sicherheitseinstellungen
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

